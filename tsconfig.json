{
  "files": ["src/index.ts", "src/lib/index.ts", "src/types/index.d.ts"],
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build"
  }
}
